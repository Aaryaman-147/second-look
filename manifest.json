{
  "manifest_version": 3,
  "name": "Second Look",
  "description": "A pause between impulse and intent.",
  "version": "2.0.0",
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
  "service_worker": "background.js",
  "type": "module"
},
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }
],
"host_permissions": ["<all_urls>"],
"icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}